@model NetworkVisualizer.Models.Packet

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Packet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PacketCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PacketType" class="control-label"></label>
                <input asp-for="PacketType" class="form-control" />
                <span asp-validation-for="PacketType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationHostname" class="control-label"></label>
                <input asp-for="DestinationHostname" class="form-control" />
                <span asp-validation-for="DestinationHostname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OriginHostname" class="control-label"></label>
                <input asp-for="OriginHostname" class="form-control" />
                <span asp-validation-for="OriginHostname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="PacketList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
